<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dumy_hyunsun"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.secpc.hellostranger.activity.LocationFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:id="@+id/LocationFragment_imageView_storeImg"
        android:layout_above="@+id/iLocationFragment_textView_store_map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dumy_store_time"
        android:id="@+id/LocationFragment_textView_store_name"
        android:focusable="false"
        android:gravity="left|bottom|center"
        android:textColor="@color/white"
        android:layout_above="@+id/LocationFragment_textView_store_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:background="@color/black_overlay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dumy_store_contact_number"
        android:id="@+id/LocationFragment_textView_store_name"
        android:focusable="false"
        android:gravity="left|bottom|center"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:layout_above="@+id/iLocationFragment_textView_store_map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/black_overlay" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/dumy_hyunsun_location"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:id="@+id/iLocationFragment_textView_store_map"
        android:layout_above="@+id/LocationFragment_button_entered" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET HERE"
        android:textColor="@color/white"
        android:id="@+id/LocationFragment_button_entered"
        android:background="@color/TestGreen"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
