<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/border"
        android:text="Double click to edit"
        android:id="@+id/textView8" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal|bottom"
        android:layout_weight="1" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pollo"
            android:layout_marginRight="@dimen/fab_margin"
            android:id="@+id/TabooActivity_ImageButton_pollo" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pesco"
            android:layout_marginLeft="@dimen/fab_margin"
            android:id="@+id/TabooActivity_ImageButton_pesco" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_vertical|center|center_horizontal"
        android:layout_weight="1" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lacto"
            android:layout_marginRight="@dimen/fab_margin"
            android:id="@+id/TabooActivity_ImageButton_lacto" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ovo"
              android:layout_margin="@dimen/fab_margin"
            android:id="@+id/TabooActivity_ImageButton_ovo" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lactovo"
            android:layout_marginLeft="@dimen/fab_margin"
            android:id="@+id/TabooActivity_ImageButton_lactovo" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hinduism"
            android:layout_marginRight="@dimen/fab_margin"
            android:id="@+id/TabooActivity_ImageButton_hinduism" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/muslim"
             android:layout_marginLeft="@dimen/fab_margin"
            android:id="@+id/TabooActivity_ImageButton_muslim" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_weight="0.3" >

        <ImageButton
            android:layout_width="@dimen/zero_dp"
            android:layout_weight="@string/for_having_equal_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/taboo_skip_icon"
            android:id="@+id/TabooActivity_ImageButton_skip"
             />

        <RelativeLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_weight="@string/for_having_equal_width"
            android:layout_height="@dimen/button_height">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_signup_icon"
                android:id="@+id/TabooActivity_ImageButton_selet"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="select"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
